<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:background="@color/overWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card_view:cardCornerRadius="5dp">



    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/overWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/overWhite"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_profile_File"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/round_profile_pic" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:paddingBottom="10dp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/tvFullNameFile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="01"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingBottom="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:singleLine="true"
                        android:text="Natal Del Caopoffffffffffffffff"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic" />


                    <TextView
                        android:id="@+id/tvMatiereFile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:text="Android"
                        android:textColor="@color/black"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/tvDateFile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017-01-28 at 09:00AM"
                        android:textColor="@color/gray_dark"
                        android:textSize="10dp"
                        android:textStyle="italic" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tvDescriptionFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, eam nullam aperiam feugiat ex. Illud commodo est an, ius cu nibh legimus necessitatibus, quem quis intellegat ei eos. An suas feugiat nusquam pro, commodo necessi..."
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvDetailFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_more"
            android:textColor="@color/gray_dark"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:background="@color/overWhite"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            card_view:cardBackgroundColor="@color/overWhite"
            card_view:cardCornerRadius="5dp"
            android:id="@+id/file_name_download">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFileName"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="MainActivity.java"
                android:textColor="@android:color/black" />


        </LinearLayout>
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">

            <TextView
                android:id="@+id/tvCommentsFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_comments_48"
                android:gravity="center_vertical|right"
                android:paddingRight="10dp"
                android:text="Comments"
                android:textColor="@color/gray_dark" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_background" />
        <!--  Password Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:forceHasOverlappingRendering="true"></android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:paddingLeft="10dp">

            <EditText
                android:id="@+id/EdtCommentFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:foregroundTint="@color/black"
                android:hint="Enter a comment"
                android:textColor="@color/black"
                android:theme="@style/EditTextHintBlack" />

            <Button

                android:id="@+id/btnAddCommentFile"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_ok_48" />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>